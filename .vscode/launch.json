    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "showDebugOutput": true,
            "name": "Bash-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bash/work.sh",
            "args": []
        },

        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Work Area",
            "type": "debugpy",
            "request": "launch",
            "program": "src/work_area.py",
            "console": "integratedTerminal"
        }
    ]
}